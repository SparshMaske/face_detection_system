FROM node:20-alpine AS build-stage

WORKDIR /app/frontend-stable
COPY frontend-stable/package*.json /app/frontend-stable/
RUN npm ci
COPY frontend-stable /app/frontend-stable

ARG REACT_APP_API_URL=/api
ENV REACT_APP_API_URL=${REACT_APP_API_URL}
RUN npm run build

FROM nginx:stable-alpine AS production-stage
COPY --from=build-stage /app/frontend-stable/build /usr/share/nginx/html
COPY docker/nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
